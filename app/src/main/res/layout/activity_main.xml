<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cathychen.volunsquare.MainActivity"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_centerInParent="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ColorLight">


    <ImageView
        android:id="@+id/square_logo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/square_logo"
        android:id="@+id/username_input"
        android:hint="Username"
        android:focusable="true"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:fontFamily="sans-serif-light"
        android:id="@+id/password_input"
        android:layout_below="@+id/username_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/login_button"
        android:layout_centerInParent="true"
        android:background="@color/ColorOrange"
        android:stateListAnimator="@null"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password_input"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/username_input"
        android:layout_alignEnd="@+id/username_input"
        android:textColor="#fff"
        android:height="20dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>
